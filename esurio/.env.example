# Esurio Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_USER=esurio
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=esurio
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_password_here

# API Keys and External Services
# Market Data
ALPHA_VANTAGE_API_KEY=your_key_here
YAHOO_FINANCE_API_KEY=your_key_here
POLYGON_API_KEY=your_key_here

# News and Social Media
NEWSAPI_KEY=your_key_here
TWITTER_API_KEY=your_key_here
TWITTER_API_SECRET=your_secret_here
TWITTER_ACCESS_TOKEN=your_token_here
TWITTER_ACCESS_SECRET=your_secret_here

# Crypto Data
COINBASE_API_KEY=your_key_here
COINBASE_API_SECRET=your_secret_here
BINANCE_API_KEY=your_key_here
BINANCE_API_SECRET=your_secret_here

# Economic Data
FRED_API_KEY=your_key_here
WORLD_BANK_API_KEY=your_key_here

# Supply Chain Data
LOGISTICS_API_KEY=your_key_here
SHIPPING_API_KEY=your_key_here

# System Configuration
# Scraping Settings
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_PER_DOMAIN=2
SCRAPING_INTERVAL_SECONDS=300

# Processing Settings
BATCH_SIZE=1000
PROCESSING_THREADS=4
CACHE_TTL_SECONDS=3600

# Neural Network Settings
CUDA_VISIBLE_DEVICES=0
MODEL_BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=100

# Risk Management
MAX_POSITION_SIZE=0.1
RISK_FREE_RATE=0.02
MAX_DRAWDOWN=0.2
STOP_LOSS_THRESHOLD=0.05

# Feature Engineering
ROLLING_WINDOW_SIZES=[5,10,20,50,100]
VOLATILITY_WINDOW=20
CORRELATION_THRESHOLD=0.7

# Optimization Settings
OPTIMIZATION_POPULATION_SIZE=100
OPTIMIZATION_GENERATIONS=50
OPTIMIZATION_MUTATION_RATE=0.1

# Backtesting Configuration
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2023-12-31
TRANSACTION_COST=0.001

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_DEBUG_MODE=false
MONITORING_INTERVAL_SECONDS=60

# Security
JWT_SECRET_KEY=your_secure_jwt_secret_here
ENCRYPTION_KEY=your_secure_encryption_key_here

# Web Interface
PORT=8000
HOST=0.0.0.0
ENABLE_SWAGGER=true
CORS_ORIGINS=["http://localhost:3000"]

# GPU Computing
ENABLE_GPU=true
GPU_MEMORY_FRACTION=0.8
TENSOR_PRECISION=float32

# Data Storage
DATA_RETENTION_DAYS=90
FEATURE_STORE_PATH=/app/data/features
MODEL_SAVE_PATH=/app/models
ARCHIVE_PATH=/app/data/archive

# Development Settings
DEBUG=false
TESTING=false
DEVELOPMENT=false
